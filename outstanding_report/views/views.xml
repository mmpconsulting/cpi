<odoo>
  <data>

    <record id="view_outstanding_report_wizard_form" model="ir.ui.view">
      <field name="name">outstanding.report.form</field>
      <field name="model">outstanding.report</field>
      <field name="arch" type="xml">
        <form string="Outstanding Report">
          <sheet>
            <group>
              <field name="date"/>
              <field name="due_date"/>
              <field name="vendors" widget="many2many_tags"/>
            </group>
            <notebook>
              <page string="Orders">
                <field name="order_line_ids">
                  <tree string="Order Lines" editable="bottom">
                    <field name="reference_order" style="width: 150px;"/>
                    <field name="supplier" style="width: 150px;"/>
                    <field name="order_date" style="width: 150px;"/>
                    <field name="total" style="width: 100px;"/>
                    <field name="order_id" invisible="1"/>
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
          <footer>
            <button type="object" name="action_submit" string="Submit" class="oe_highlight"/>
            <button string="Cancel" class="oe_link" special="cancel"/>
        </footer>
        </form>
      </field>
    </record>


    <record id="action_outstanding_report_wizard" model="ir.actions.act_window">
      <field name="name">Outstanding Report Wizard</field>
      <field name="res_model">outstanding.report</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_outstanding_report_wizard_form"/>
      <field name="target">new</field>
    </record>

    <menuitem
      id="child_purchase_outstandingreport"
      name="Outstanding Report"
      sequence="2"
      parent="purchase.purchase_report_main"
      action="action_outstanding_report_wizard" />
  </data>
</odoo>