<odoo>
  <template id="report_outstanding_template">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="o">
        <div class="page" style="padding: 20px;">
          <div class="header" style="text-align:center; margin-bottom: 0px;">
            <h2>
                <t t-esc="o.company_id.name"></t>
            </h2>
            <strong style="font-size: 18px;">Outstanding Purchase Orders</strong>
            <p style="margin: 0;font-size: 16px;"><t t-esc="o.date"
                t-options='{"widget": "date","format": "dd-MM-yyyy"}' /> - <t t-esc="o.due_date"
                t-options='{"widget": "date","format": "dd-MM-yyyy"}' /></p>
          </div>

          <table class="table" style="width:100%; border-collapse:collapse;padding-top: -20px;">
            <thead>
              <tr style="border-bottom:1px solid black;">
                <th style="text-align:left; padding: 5px; width: 10%;">Code</th>
                <th style="text-align:left; padding: 5px; width: 30%;">Product</th>
                <th style="text-align:center; padding: 5px; width: 15%;">Date Planned</th>
                <th style="text-align:center; padding: 5px; width: 10%;">Ordered</th>
                <th style="text-align:center; padding: 5px; width: 10%;">Received</th>
                <th style="text-align:center; padding: 5px; width: 15%;">Outstanding</th>
                <th style="text-align:left; padding: 5px; width: 10%;">UoM</th>
              </tr>
            </thead>

            <t t-foreach="o.order_line_ids" t-as="lines">
              <tbody>
                <tr style="border-top:1px solid black;border-bottom:1px solid black;border-collapse:collapse;background-color: #d3d3d3;padding: 20px;border-top: 1px;">
                  <td colspan="7" style="padding: 5px;">
                    <strong>Supplier:</strong>
                    <t t-esc="lines.supplier.name" />
                  </td>
                </tr>
                <tr>
                  <td colspan="2" style="padding: 5px;">
                    <strong>Order#:</strong>
                    <t t-esc="lines.reference_order.name" />
                  </td>
                  <td colspan="5" style="padding: 5px;">
                    <strong>Order Date:</strong>
                    <t t-esc="lines.order_date"
                      t-options='{"widget": "date","format": "dd-MM-yyyy"}' />
                  </td>
                </tr>
                <t t-foreach="lines.reference_order.order_line" t-as="dos">
                  <tr style="font-size: 16px;">
                    <td style="padding: 5px;">
                      <t t-esc="dos.product_id.default_code" />
                    </td>
                    <td style="padding: 5px;">
                      <t t-esc="dos.product_id.name" />
                    </td>
                    <td style="padding: 5px;text-align:center;">
                      <t t-esc="dos.date_planned"
                        t-options='{"widget": "date","format": "dd-MM-yyyy"}' />
                    </td>
                    <td style="padding: 5px;text-align:center;">
                      <t t-esc="dos.product_qty" />
                    </td>
                    <td style="padding: 5px;text-align:center;">
                      <t t-esc="dos.qty_received" />
                    </td>
                    <td style="padding: 5px;text-align:right;">
                      <t t-esc="dos.product_qty - dos.qty_received" />
                    </td>
                    <td style="padding: 5px;">
                      <t t-esc="dos.product_uom.name" />
                    </td>
                  </tr>
                </t>

              </tbody>
            </t>
          </table>
        </div>
      </t>
    </t>
  </template>


