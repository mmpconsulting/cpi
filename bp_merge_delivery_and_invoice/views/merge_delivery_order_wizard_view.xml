<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="merge_delivery_order_wizard_view_new" model="ir.ui.view">
		<field name="name">merge.delivery.order.wizard.view</field>
		<field name="model">merge.delivery.order.wizard</field>
		<field name="arch" type="xml">
			<form>
				<group >
					<group>
						<field name="partner_id" />
					</group>
					<group>
						<button colspan="2" name="action_get_picking" type="object" string="Get Delivery Orders" class="oe_highlight" />
					</group>
				</group>
				<notebook>
					<page string="Delivery Orders">
						<field name="picking_ids">
							<tree>
								<field name="name"/>
								<field name="partner_id"/>
								<field name="origin"/>
								<field name="state"/>
							</tree>
						</field>
					</page>
				</notebook>
				<footer>
					<button type="object" name="process_wizard" string="Process" class="oe_highlight" />
					<button string="Cancel" class="oe_link" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>

	<act_window id="action_merge_delivery_order_wizard_new" res_model="merge.delivery.order.wizard" name="Delivery Order Merge" view_mode="form" target="new" />

	<menuitem id="merge_delivery_menu" name="Delivery Order Merge" action="action_merge_delivery_order_wizard_new" parent="stock.menu_stock_warehouse_mgmt" sequence="98"/>

</odoo>