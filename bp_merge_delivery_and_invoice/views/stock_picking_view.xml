<odoo>
    <data>
        <record id="merge_delivery_stock_view_picking_form_form" model="ir.ui.view">
            <field name="name">merge.delivery.stock.view.picking.form.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_validate']" position="after">
                    <field name="is_merged_picking" invisible="1"/>
                    <field name="is_merge_invoice_created" invisible="1"/>
                    <field name="invoice_merge_ids" invisible="1"/>
                    <!-- <button name="action_create_invoices" type="object" string="Create Invoice" attrs="{'invisible':['|','|',('state', '!=', 'done'),('is_merged_picking','=',False),('invoice_merge_count','>',0)]}" groups="account.group_account_invoice" /> -->
                    <!-- <button name="action_create_invoices" type="object" string="Create Invoice" attrs="{'invisible':['|',('state', '!=', 'done'),('invoice_merge_count','>',0)]}" groups="account.group_account_invoice" />  -->
                    <button name="action_create_invoices" type="object" string="Create Invoice" attrs="{'invisible':[('state', '!=', 'done')]}" groups="account.group_account_invoice" />
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page string="Merged Sale Orders" groups="base.group_no_one">
                        <field name="merged_sale_ids"/>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="merge_invoice_view_picking_form" model="ir.ui.view">
            <field name="name">stock_picking_invoice_link.merge.invoice.stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock_picking_invoice_link.view_picking_form" />
            <field name="priority">22</field>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_view_invoice']" position="replace">
                    <button type="object" name="action_view_invoice" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': ['|',('invoice_count', '=', 0),('invoice_merge_count','>',0)]}">
                        <field name="invoice_count" widget="statinfo" string="Invoice" />
                    </button>
                </xpath>

                <xpath expr="//button[@name='action_view_invoice']" position="after">
                    <button type="object" name="action_view_merge_invoice" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': [('invoice_merge_count', '=', 0)]}">
                        <field name="invoice_merge_count" widget="statinfo" string="Merge Invoice" />
                    </button>
                </xpath>
            </field>
        </record>

    </data>
</odoo>