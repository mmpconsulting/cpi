<odoo>
  <data>
    <record id="view_move_form_inherit_mmp_kasbon" model="ir.ui.view">
      <field name="name">account.move.view.form.inherit</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@name='button_box']" position="inside">
          <button name="open_journal_from_reconciled" class="oe_stat_button" icon="fa-bars" type="object" attrs="{'invisible': [('move_type', '!=', 'entry')]}"/>
        </xpath>
        <xpath expr="//sheet" position="inside">
          <field name="move_type" invisible="1"/>
        </xpath>
      </field>
    </record>

    <record id="view_user_form_inherit_mmp_kasbon" model="ir.ui.view">
      <field name="name">res.users.view.form.inherit.ym.kasbon</field>
      <field name="model">res.users</field>
      <field name="inherit_id" ref="base.view_users_form"/>
      <field name="arch" type="xml">
        <xpath expr="//group[@name='messaging']" position="after">
            <group name="accounts_npum" string="NPUM Akun" >
              <field name="npum_account_id" groups="account.group_account_manager"/>
            </group>
            <group name="accounts_npb" string="NPB Akun" >
              <field name="npb_account_ids" nolabel="1" colspan="2" groups="account.group_account_manager"/>
            </group>
        </xpath>
      </field>
    </record>

    <record id="view_account_journal_form_inherit_mmp_kasbon" model="ir.ui.view">
      <field name="name">account.journal.view.form.inherit</field>
      <field name="model">account.journal</field>
      <field name="inherit_id" ref="account.view_account_journal_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='type']" position="after">
          <field name="is_npb"/>
          <field name="is_npum"/>
          <field name="is_lpj_kasbon"/>
        </xpath>
      </field>
    </record>

    <record id="kasbon_operasional_view_tree" model="ir.ui.view">
      <field name="name">kasbon.operasional.view.tree</field>
      <field name="model">kasbon.operasional</field>
      <field name="arch" type="xml">
        <tree>
          <field name="date" />
          <field name="name" />
          <field name="company_id" />
          <field name="department_id" />
          <field name="kasbon_type" />
          <field name="analytic_distribution" widget="analytic_distribution"/>
          <field name="state" widget="badge" 
            decoration-muted="state == 'draft'" 
            decoration-info="state in ('submission','posted')"
            decoration-success="state == 'done'" 
            decoration-danger="state == 'cancel'"/>
        </tree>
      </field>
    </record>
    
    <record id="kasbon_operasional_view_form" model="ir.ui.view">
      <field name="name">kasbon.operasional.view.form</field>
      <field name="model">kasbon.operasional</field>
      <field name="arch" type="xml">
        <form string="Kasbon Operasional">
          <header>
            <button name="create_payment_kasbon" class="oe_highlight" 
                    attrs="{'invisible': [('move_id', '=', False), ('payment_state', 'not in', ['not_paid', 'partial'])]}" 
                    groups="mmp_kasbon.group_payment_kasbon" string="Create Payment" type="object"/>
            <button name="set_to_submission" attrs="{'invisible': [('state', '!=', 'draft')]}" 
                    string="Submit" class="btn-primary" type="object"/>
            <button name="set_to_posted" attrs="{'invisible': [('state', '!=', 'submission')]}" 
                    string="Create Journal" class="btn-primary" type="object" 
                    groups="mmp_kasbon.group_journal_post_kasbon"/>
            <button name="set_to_draft" attrs="{'invisible': [('state', '=', 'draft')]}" 
                    string="Edit" type="object"/>
            <button name="set_to_cancel" attrs="{'invisible': [('state', 'in', ['done', 'cancel'])]}" 
                    string="Cancel" type="object"/>
            <field name="state" widget="statusbar" statusbar_visible="draft,submission,posted,done"/>
          </header>
          <sheet>
            <field name="account_domain" invisible="1"/>
            <field name="payment_state" invisible="1"/>
            <span class="o_form_label">Name</span>
            <div class="oe_title">
              <h1>
                <field name="name" readonly="1"/>
              </h1>
            </div>
            <group name="header">
              <group name="kasbon_left">
                <field name="kasbon_type" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                <field name="paid_to_id" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                <field name="department_id" attrs="{'readonly': [('state', '!=', 'draft')], 'groups': 'mmp_kasbon.group_show_department_kasbon'}"/>
                <field name="analytic_id" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': True}"/>
                <field name="analytic_distribution" attrs="{'readonly': [('state', '!=', 'draft')]}" widget="analytic_distribution"/>
                <field name="analytic_distribution_convert_to_char" invisible="1"/>
              </group>
              <group name="kasbon_right">
                <field name="date" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                <field name="account_credit_kasbon_id" attrs="{'readonly': True, 'force_save': True, 'invisible': [('state', '=', 'draft')]}"/>
                <field name="journal_id" invisible="1"/>
              </group>
            </group>
            <notebook>
              <page name="details" string="Details">
                <field name="kasbon_operasional_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                  <tree editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="name" required="1"/>
                    <field name="account_id" domain="[['id', 'in', parent.account_domain]]" options="{'no_create': True}" required="1"/>
                    <field name="jumlah" sum="Total"/>
                  </tree>
                </field>
                <group col="12" class="oe_invoice_lines_tab" name="footer">
                  <group colspan="8">
                    <field name="terbilang" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    <field name="note" placeholder="Terms and Conditions" colspan="2" nolabel="1"/>
                  </group>
                  <group colspan="4">
                    <group class="oe_subtotal_footer oe_right">
                      <field name="amount_residual" class="oe_subtotal_footer_separator" attrs="{'invisible': [('state', '!=', 'done')]}"/>
                    </group>
                  </group>
                </group>
              </page>
              <page name="other" string="Other" attrs="{'invisible': [('move_id', '=', False)]}">
                <group name="info">
                  <group name="info_detail_left">
                    <field name="create_uid" invisible="1"/>
                    <field name="company_id" invisible="1" required="1"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="analytic_precision" invisible="1"/>
                    <field name="is_paid_full" invisible="1"/>
                    <field name="move_id" readonly="1"/>
                    <field name="invoice_date" readonly="1"/>
                  </group>
                </group>
              </page>
            </notebook>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" groups="base.group_user"/>
            <field name="activity_ids"/>
            <field name="message_ids"/>
          </div>
        </form>
      </field>
    </record>

    <record id="lpj_kasbon_operasional_view_tree" model="ir.ui.view">
      <field name="name">lpj.kasbon.operasional.view.tree</field>
      <field name="model">lpj.kasbon.operasional</field>
      <field name="arch" type="xml">
        <tree string="LPJ Kasbon Operasional">
          <field name="name" />
          <field name="date" />
          <field name="kasbon_id" string="No. NPUM"/>
          <field name="department_id" groups="mmp_kasbon.group_show_department_kasbon"/>
          <field name="analytic_distribution" widget="analytic_distribution"/>
          <field name="state" widget="badge" 
            decoration-muted="state == 'draft'" 
            decoration-info="state in ('submission','posted')" 
            decoration-danger="state == 'cancel'"
            decoration-success="state == 'done'"/>
        </tree>
      </field>
    </record>

    <record id="lpj_kasbon_operasional_view_form" model="ir.ui.view">
      <field name="name">lpj.kasbon.operasional.view.form</field>
      <field name="model">lpj.kasbon.operasional</field>
      <field name="arch" type="xml">
        <form string="LPJ Kasbon Operasional">
          <header>
            <button name="create_payment_lpj" class="oe_highlight" 
                    attrs="{'invisible': [('state', '!=', 'posted'), ('payment_move_id', '!=', False)]}" 
                    string="Create Payment" type="object" groups="mmp_kasbon.group_payment_kasbon"/>
            <button name="set_to_submission" 
                    attrs="{'invisible': [('state', '!=', 'draft')]}" 
                    string="Submit" class="btn-primary" type="object"/>
            <button name="set_to_posted" 
                    attrs="{'invisible': [('state', '!=', 'submission')]}" 
                    string="Create Journal" class="btn-primary" type="object" 
                    groups="mmp_kasbon.group_journal_post_kasbon"/>
            <button name="set_to_draft" 
                    attrs="{'invisible': [('state', '=', 'draft')]}" 
                    string="Edit" type="object"/>
            <button name="set_to_cancel" 
                    attrs="{'invisible': [('state', 'in', ['done', 'cancel'])]}" 
                    string="Cancel" type="object"/>
            <field name="state" widget="statusbar" statusbar_visible="draft,submission,posted,done"/>
          </header>
          <sheet>
            <field name="payment_move_id" invisible="1"/>
            <field name="payment_state" invisible="1"/>
            <span class="o_form_label">Name</span>
            <div class="oe_title">
              <h1>
                <field name="name" readonly="1"/>
              </h1>
            </div>
            <group name="header">
              <group name="kasbon_left">
                <field name="kasbon_id" 
                       attrs="{'readonly': [('state', '!=', 'draft')]}" 
                       options="{'no_create': True}" domain="[('kasbon_type', '=', 'npum')]"/>
                <field name="paid_to_id" required="1" 
                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                <field name="department_id" 
                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                <field name="analytic_id" 
                       attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': True}"/>
                <field name="analytic_distribution" 
                       attrs="{'readonly': [('state', '!=', 'draft')]}" 
                       widget="analytic_distribution"/>
                <field name="analytic_distribution_convert_to_char" invisible="1"/>
              </group>
              <group name="kasbon_right">
                <field name="date" required="1" 
                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                <field name="payment_journal_id" 
                       attrs="{'readonly': [('state', 'in', ['done', 'cancel'])]}" 
                       options="{'no_create': True}" groups="mmp_kasbon.group_payment_kasbon"/>
                <field name="journal_id" invisible="1"/>
              </group>
            </group>
            <notebook>
              <page name="details" string="Details">
                <field name="lpj_line_ids" 
                       attrs="{'readonly': [('state', '!=', 'draft')]}">
                  <tree editable="bottom">
                    <field name="no_sequence" required="1"/>
                    <field name="date" required="1"/>
                    <field name="ket"/>
                    <field name="account_id" required="1"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="jumlah" sum="Total"/>
                  </tree>
                </field>
                <group col="12" class="oe_invoice_lines_tab">
                  <group colspan="8">
                    <field name="note" placeholder="Terms and Conditions" colspan="2" nolabel="1"/>
                  </group>
                  <group colspan="4">
                    <group class="oe_subtotal_footer oe_right">
                      <field name="jumlah_kasbon" nolabel="1" colspan="2"/>
                      <field name="total_pertanggungjawaban" colspan="2" nolabel="1"/>
                      <field name="lpj_payments_widget" colspan="2" nolabel="1" widget="payment"/>
                      <field name="lebih_kurang_bayar" class="oe_subtotal_footer_separator"/>
                    </group>
                  </group>
                </group>
              </page>
              <page name="other" string="Other" 
                    attrs="{'invisible': [('move_id', '=', False)]}">
                <group name="info">
                  <group name="info_detail_left">
                    <field name="create_uid" invisible="1"/>
                    <field name="company_id" invisible="1" required="1"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="analytic_precision" invisible="1"/>
                    <field name="is_paid_full" invisible="1"/>
                    <field name="move_id" 
                           attrs="{'invisible': [('move_id', '=', False)]}" 
                           readonly="1"/>
                    <field name="invoice_date" 
                           attrs="{'invisible': [('move_id', '=', False)]}" 
                           readonly="1"/>
                    <field name="payment_move_id" string="Journal Pembayaran" 
                           attrs="{'invisible': [('payment_move_id', '=', False)]}" 
                           readonly="1"/>
                  </group>
                </group>
              </page>
            </notebook>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" groups="base.group_user"/>
            <field name="activity_ids"/>
            <field name="message_ids"/>
          </div>
        </form>
      </field>
    </record>

    <record id="sequence_kasbon_seq" model="ir.sequence">
        <field name="name">Kasbon Operasional</field>
        <field name="code">kasbon.operasional</field>
        <field name="prefix">KSB/%(year)s/%(month)s/</field>
        <field name="padding">4</field>
    </record>

    <record id="sequence_lpj_kasbon_seq" model="ir.sequence">
        <field name="name">LPJ Kasbon Operasional</field>
        <field name="code">lpj.kasbon.operasional</field>
        <field name="suffix">/LPJ-KSB/JV/%(year)s</field>
        <field name="padding">3</field>
    </record>

    <record id="npb_npum_action" model="ir.actions.act_window">
      <field name="name">NPB / NPUM</field>
      <field name="res_model">kasbon.operasional</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('kasbon_type', 'in', ['npb','npum'])]</field>
    </record>

    <record id="lpj_kasbon_operasional_action" model="ir.actions.act_window">
      <field name="name">LPJ Kasbon Operasional</field>
      <field name="res_model">lpj.kasbon.operasional</field>
      <field name="view_mode">tree,form</field>
    </record>


    
    <menuitem
          id="parent_kasbon_menu"
          name="NPB / NPUM"
          web_icon="mmp_kasbon,static/description/icon_kasbon.png"
          groups="mmp_kasbon.group_kasbon_user,mmp_kasbon.group_kasbon_manager_department,mmp_kasbon.group_kasbon_administrator"
          sequence="5"/>
          <menuitem
              id="npb_npum_menu"
              name="NPB / NPUM"
              action="npb_npum_action"
              parent="parent_kasbon_menu"
              groups="mmp_kasbon.group_kasbon_user,mmp_kasbon.group_kasbon_manager_department,mmp_kasbon.group_kasbon_administrator"
              sequence="1"/>
          <menuitem 
              id="lpj_kasbon_operasional_menu"
              name="LPJ Kasbon Operasional"
              action="lpj_kasbon_operasional_action"
              parent="parent_kasbon_menu"
              groups="mmp_kasbon.group_kasbon_user,mmp_kasbon.group_kasbon_manager_department,mmp_kasbon.group_kasbon_administrator"
              sequence="2"/>


  </data>
</odoo>